<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!--Light/day mode theme. -->

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="DarkTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3b393c</item>
        <item name="colorPrimaryDark">#181617</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme1">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

</style>

    <style name="ThemeDark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#3b393c</item>
        <item name="colorPrimaryDark">#181617</item>
        <item name="colorAccent">@color/color</item>
    </style>

</resources>
