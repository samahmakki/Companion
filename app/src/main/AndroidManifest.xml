<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samahmakki.companion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MedicationActivity"
            android:label="@string/medications"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samahmakki.companion.MainActivity" />
        </activity>
        <activity
            android:name=".BillsActivity"
            android:label="@string/bills"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samahmakki.companion.MainActivity" />
        </activity>
        <activity
            android:name=".MagnifierActivity"
            android:label="@string/magnifier"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samahmakki.companion.MainActivity" />
        </activity>
        <activity
            android:name=".ActivitiesActivity"
            android:label="@string/activities"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samahmakki.companion.MainActivity" />
        </activity>

        <activity android:name=".flashlightActivity"
            android:label="@string/flashlight"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samahmakki.companion.MainActivity" />
        </activity>
        <activity
            android:name=".AddBillActivity"
            android:label="@string/add_bill_button"
            android:parentActivityName=".BillsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samahmakki.companion.BillsActivity" />
        </activity>
    </application>

</manifest>